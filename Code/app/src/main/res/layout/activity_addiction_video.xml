<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityAddictionVideo"
    android:background="@drawable/backa">
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/main">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/brain" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/comic_neue_bold"
                android:text="Addiction Videos"
                android:textColor="#FFFFFF"
                android:textSize="32sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/imageView2"
                app:layout_constraintStart_toEndOf="@+id/imageView2"
                app:layout_constraintTop_toTopOf="@+id/imageView2" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@+id/cardView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:id="@+id/yoga1"

                android:backgroundTint="@color/white"
                app:cardCornerRadius="5dp"
                app:cardElevation="5dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"


                    >

                    <ImageView
                        android:id="@+id/yogaico1"
                        android:layout_width="120dp"
                        android:layout_height="80dp"

                        android:background="@color/light_blue_A400"

                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/addiction1" />

                    <TextView
                        android:id="@+id/title1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="#FFFFFF"
                        android:fontFamily="@font/comic_neue_bold"
                        android:paddingLeft="12dp"
                        android:paddingTop="10dp"
                        android:text="Struggle with food addiction"
                        android:textColor="#000000"
                        android:textSize="20sp"
                        android:textStyle="bold"

                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/yogaico1"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/benifit1"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:background="#FFFFFF"
                        android:fontFamily="@font/comic_neue_bold"
                        android:paddingLeft="10dp"
                        android:paddingTop="3dp"
                        android:textSize="14sp"
                        android:text="Stay healthier with good eating habits"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/yogaico1"
                        app:layout_constraintTop_toBottomOf="@+id/title1"
                        app:layout_constraintBottom_toBottomOf="parent"/>




                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:id="@+id/yoga2"


                android:backgroundTint="@color/white"
                app:cardCornerRadius="5dp"
                app:cardElevation="5dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                    <ImageView
                        android:id="@+id/yogaico2"
                        android:layout_width="120dp"
                        android:layout_height="80dp"

                        android:background="#FF6D00"

                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/addiction2" />

                    <TextView
                        android:id="@+id/title2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="#FFFFFF"
                        android:fontFamily="@font/comic_neue_bold"
                        android:padding="12dp"
                        android:text="Internet Addiction"
                        android:textColor="#000000"
                        android:textSize="20sp"
                        android:textStyle="bold"

                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/yogaico2"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/benifit2"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:background="#FFFFFF"
                        android:fontFamily="@font/comic_neue_bold"
                        android:paddingLeft="10dp"
                        android:paddingTop="3dp"
                        android:textSize="14sp"
                        android:text="Control your internet addiction"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/yogaico2"
                        app:layout_constraintTop_toBottomOf="@+id/title2"
                        app:layout_constraintBottom_toBottomOf="parent"/>




                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:id="@+id/yoga3"


                android:backgroundTint="@color/white"
                app:cardCornerRadius="5dp"
                app:cardElevation="5dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                    <ImageView
                        android:id="@+id/yogaico3"
                        android:layout_width="120dp"
                        android:layout_height="80dp"

                        android:background="#64DD17"

                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/addiction3" />

                    <TextView
                        android:id="@+id/title3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="#FFFFFF"
                        android:fontFamily="@font/comic_neue_bold"
                        android:padding="12dp"
                        android:text="Smkoing Addiction Control"
                        android:textColor="#000000"
                        android:textSize="20sp"
                        android:textStyle="bold"

                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/yogaico3"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/benifit3"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:background="#FFFFFF"
                        android:fontFamily="@font/comic_neue_bold"
                        android:paddingLeft="10dp"
                        android:paddingTop="3dp"
                        android:textSize="14sp"
                        android:text="Control Smoking Addiction"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/yogaico3"
                        app:layout_constraintTop_toBottomOf="@+id/title3"
                        app:layout_constraintBottom_toBottomOf="parent"/>




                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:id="@+id/yoga4"

                android:backgroundTint="@color/white"
                app:cardCornerRadius="5dp"
                app:cardElevation="5dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                    <ImageView
                        android:id="@+id/yogaico4"
                        android:layout_width="120dp"
                        android:layout_height="80dp"
                        android:background="#FF0073"

                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/addiction4" />

                    <TextView
                        android:id="@+id/title4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="#FFFFFF"
                        android:fontFamily="@font/comic_neue_bold"
                        android:padding="12dp"
                        android:text="How to overcome gamming addiction"
                        android:textColor="#000000"
                        android:textSize="20sp"
                        android:textStyle="bold"

                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/yogaico4"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/benifit4"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:background="#FFFFFF"
                        android:fontFamily="@font/comic_neue_bold"
                        android:paddingLeft="10dp"
                        android:paddingTop="3dp"
                        android:textSize="14sp"
                        android:text="Helps in healing Mind and Soul"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/yogaico4"
                        app:layout_constraintTop_toBottomOf="@+id/title4"
                        app:layout_constraintBottom_toBottomOf="parent"/>




                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:id="@+id/yoga5"

                android:backgroundTint="@color/white"
                app:cardCornerRadius="5dp"
                app:cardElevation="5dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                    <ImageView
                        android:id="@+id/yogaico5"
                        android:layout_width="120dp"
                        android:layout_height="80dp"

                        android:background="#00BFA5"

                        android:scaleType="fitXY"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.0"
                        app:srcCompat="@drawable/addiction5" />

                    <TextView
                        android:id="@+id/title5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="#FFFFFF"
                        android:fontFamily="@font/comic_neue_bold"
                        android:paddingLeft="12dp"
                        android:paddingTop="10dp"
                        android:text="Waterfall music "
                        android:textColor="#000000"
                        android:textSize="20sp"
                        android:textStyle="bold"

                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/yogaico5"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/benifit5"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:background="#FFFFFF"
                        android:fontFamily="@font/comic_neue_bold"
                        android:paddingLeft="10dp"
                        android:paddingTop="3dp"
                        android:textSize="14sp"
                        android:text="Sound of nature"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/yogaico5"
                        app:layout_constraintTop_toBottomOf="@+id/title5"
                        app:layout_constraintBottom_toBottomOf="parent"/>




                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>